#:kivy 1.11.0

<SmartLogcat>: 
    orientation: "vertical"

    GridLayout:
        cols: 1
        rows: 2
        size: root.width, root.height

        GridLayout:
            cols: 4

            Label:
                text: 'Type the filter (ex: com.someapp, close, etc):'

            TextInput:
                id:filter
                on_text:root.search(self.text)

        Button:
            text: "Salvar screenshot"
            font_size: 10
            on_release:root.take_screenshot()


    

    